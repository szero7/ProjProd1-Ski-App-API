
<div class="galery">

<% if (!pictures || pictures.length == 0) { %>
    <img src="../images/image-spot.jpg" class="img-fluid" alt="Spot de ski">
<% } else if (pictures.length == 1) { %>
    <img src="../uploads/<%= pictures[0] %>" class="img-fluid" alt="Spot de ski">
<% } else if (pictures.length == 2) { %>
    <div class="row">
        <div class="col-md-6">
            <img src="../uploads/<%= pictures[0] %>" class="img-fluid" alt="Spot de ski">
        </div>
        <div class="col-md-6">
            <img src="../uploads/<%= pictures[1] %>" class="img-fluid" alt="Spot de ski">
        </div>
    </div>
<% } else if (pictures.length == 3){ %>
<div class="row">
    <div class="col-md-6">
        <img src="../uploads/<%= pictures[0] %>" class="img-fluid" alt="Spot de ski">
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-12">
                <img src="../uploads/<%= pictures[1] %>" class="img-fluid" alt="Spot de ski">
            </div>
            <div class="col-12">
                <img src="../uploads/<%= pictures[2] %>" class="img-fluid" alt="Spot de ski">
            </div>
        </div>
    </div>
</div>
<% } else { %>
    <div class="row">
        <div class="col">
            <img src="../uploads/<%= pictures[0] %>" class="img-fluid" alt="Spot de ski">
        </div>
        <div class="col">
            <img src="../uploads/<%= pictures[1] %>" class="img-fluid" alt="Spot de ski">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <img src="../uploads/<%= pictures[2] %>" class="img-fluid" alt="Spot de ski">
        </div>
        <div class="col">
            <img src="../uploads/<%= pictures[3] %>" class="img-fluid" alt="Spot de ski">
        </div>
    </div>
<% } %>

</div>
<% if (pages > 0) { %>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center my-4">

            <!--First-->

            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link rounded">Previous</a></li>
            <% } else { %>
                <li class="page-item"><a href="/spotfeed/1" class="page-link rounded">Previous</a></li>
            <% } %>


            <!--s'il y plus de 5 page, on va les diminuer en des points avant comme ça ... -->
            <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="page-item disabled"><a>...</a></li>
            <% } %>

            
            <!-- tout les page à l'interieur-->
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="page-item active"><a class="page-link rounded"><%= i %></a></li>
                <% } else { %>
                    <li class="page-item"><a href="/spotfeed/<%= i %>" class="page-link rounded"><%= i %></a></li>
                <% } %>

                <!--s'il y plus de 5 page, on va les diminuer en des points après comme ça ... -->
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item disabled"><a class="page-link rounded">...</a></li>
                <% } %>
            <% } %>

            <!--Last-->

            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
            <% } else { %>
                <li class="page-item"><a href="/spotfeed/<%= pages %>" class="page-link">Last</a></li>
            <% } %>
        

        </ul>
    </nav>
<% } %>


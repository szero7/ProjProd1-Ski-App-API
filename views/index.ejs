<main>
    <div id="connexion">
        <div class="container-fluid mt-5">
            <div class="row justify-content-center my-5">
                <div class="col-lg-4 col-md-6 col-8 bg-light bg-opacity-50 p-4 rounded text-center">
                    <%- include('./partials/messages', {alert: "success"}) %>
                    <div class="h3 text-secondary">Connection</div>
                    <form action="/login" method="post">
                        <div class="mb-2">
                            <label for="email" class="form-label"></label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="mb-2">
                            <label for="password" class="form-label"></label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary mt-5 w-50 h-100">Connect</button>
                        <p class="mt-3"><small>New on SKIOOB ? <a href="/signup">Register</a></small></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
